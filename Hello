local ReplicatedStorage = game:GetService("ReplicatedStorage")
local ValidateURL = ReplicatedStorage:WaitForChild("ValidateURL")

-- URL to load the code
local url = "https://raw.githubusercontent.com/Hahaha2995/HelloWorld/main/Hello"

-- Call the server to validate the URL
ValidateURL:FireServer(url)

-- Listen for the response from the server
ValidateURL.OnClientEvent:Connect(function(isValid)
    if isValid then
        -- If the URL is valid, load and execute the code
        local script = loadstring(game:HttpGet(url, true))
        script()  -- Execute the loaded script

        -- Print a success message
        print("HAHAHAHAH IT WORKS")
    else
        -- If the URL is not valid, deny execution
        error("Unauthorized repository or URL detected. Script execution blocked.")
    end
end)
