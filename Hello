local HttpService = game:GetService("HttpService")

-- Expected repository details
local AUTHORIZED_OWNER = "Hahaha2995"   -- Your GitHub username
local AUTHORIZED_REPO = "HelloWorld"    -- Your GitHub repository name
local GITHUB_PAT = os.getenv("GITHUB_PAT") -- Fetches the token from the environment

-- GitHub API URL to fetch raw file content (adjust the file path if needed)
local raw_file_url = "https://raw.githubusercontent.com/" .. AUTHORIZED_OWNER .. "/" .. AUTHORIZED_REPO .. "/main/Hello"

local function fetch_file_content()
    -- Prepare the headers with the Authorization token
    local headers = {
        ["Authorization"] = "token " .. GITHUB_PAT,
        ["Accept"] = "application/vnd.github.v3+json"
    }

    local request = {
        Url = raw_file_url,
        Method = "GET",
        Headers = headers
    }

    local success, response = pcall(function()
        return HttpService:RequestAsync(request)
    end)

    if success then
        return response.Body -- The raw content of the file
    else
        warn("Failed to fetch file content: " .. response)
    end

    return nil
end

-- Fetch the file content
local file_content = fetch_file_content()

if file_content then
    -- Print the raw content of the file if successfully fetched
    print("Fetched File Content:\n" .. file_content)
    -- Print confirmation that everything is working
    print("HAHAHAHAH IT WORKS")
else
    error("Failed to fetch file content from GitHub")
end
